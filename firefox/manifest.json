{
  "name": "__MSG_appName__",
  "short_name": "yt-subtitle-filter",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "manifest_version": 2,
  "version": "1.3.2",
  "author": "2jun0",
  "homepage_url": "https://github.com/2jun0/yt-subtitle-filter",
  "icons": {
    "32": "asset/logo/logo-big-32.png",
    "64": "asset/logo/logo-big-64.png",
    "128": "asset/logo/logo-big-128.png"
  },
  "background": {
    "page": "html/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_name": "Options",
    "default_popup": "html/popup.html",
    "default_icon": "asset/logo/logo-little.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/content_script/subtitleFilter.js"],
      "css": ["css/content_script.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": ["js/lang.js", "js/storage.js", "js/common.js"],
  "permissions": [
    "*://*.youtube.com/*",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webRequest"
  ],
  "content_security_policy": "script-src 'self' https://www.youtube.com/iframe_api https://www.youtube.com; object-src 'self'"
}
