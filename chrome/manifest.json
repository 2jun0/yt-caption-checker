{
  "name": "__MSG_appName__",
  "short_name": "yt-subtitle-filter",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "manifest_version": 2,
  "version": "1.2.0",
  "author": "2jun0",
  "homepage_url": "https://github.com/2jun0/yt-subtitle-filter",
  "icons": {
    "128": "asset/logo-big.png"
  },
  "background": {
    "page": "html/background.html",
    "js": "js/background/activePopup.js",
    "persistent": true
  },
  "page_action": {
    "default_name": "Options",
    "default_popup": "html/popup.html",
    "default_icon": "asset/logo-little.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/subtitleFilter.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": ["js/lang.js"],
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "*://*.youtube.com/*",
    "webRequest"
  ],
  "content_security_policy": "script-src 'self' https://www.youtube.com/iframe_api https://www.youtube.com; object-src 'self'"
}
