{
  "name":"Youtube subtitle filter",
  "short_name":"Youtube subtitle filter",
  "description":"",
  "manifest_version": 2,
  "version":"0.9.1",
  "author":"2jun0",
  "homepage_url": "https://youtube.com",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_name": "Options",
    "default_popup": "html/popup.html",
    "default_icon": "asset/logo.png"
  },
  "content_scripts":[
    {
      "matches": ["*://*.youtube.com/*"],
      "js":["js/subtitleFilter.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": ["storage", "declarativeContent"],
  "icons": {
    "48": "asset/logo.png"
  }
}