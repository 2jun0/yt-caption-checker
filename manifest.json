{
    "manifest_version": 3,
    "name": "YT Caption Checker Aid",
    "version": "1.0.0",
    "description": "유튜브 썸네일 위에 선택한 자막 언어 존재 여부를 태그로 표시합니다.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://m.youtube.com/*",
        "https://music.youtube.com/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://youtube.com/*",
                "https://m.youtube.com/*",
                "https://music.youtube.com/*"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html"
    }
}